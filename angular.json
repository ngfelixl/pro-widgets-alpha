{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "",
  "projects": {
    "docs": {
      "root": "apps/docs",
      "sourceRoot": "apps/docs/src",
      "projectType": "application",
      "prefix": "app",
      "schematics": {
        "@schematics/angular:component": {
          "style": "sass"
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/apps/docs",
            "index": "apps/docs/src/index.html",
            "main": "apps/docs/src/main.ts",
            "polyfills": "apps/docs/src/polyfills.ts",
            "tsConfig": "apps/docs/tsconfig.app.json",
            "assets": [
              "apps/docs/src/favicon.ico",
              "apps/docs/src/assets",
              "apps/docs/src/manifest.json"
            ],
            "styles": [
              "apps/docs/src/theme.scss",
              "apps/docs/src/styles.scss"
            ],
            "scripts": [],
            "es5BrowserSupport": true
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "apps/docs/src/environments/environment.ts",
                  "with": "apps/docs/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                }
              ],
              "serviceWorker": true,
              "ngswConfigPath": "apps/docs/src/ngsw-config.json",
              "baseHref": "./",
              "deployUrl": "https://ngfelixl.github.io/pro-widgets/"
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "docs:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "docs:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "docs:build"
          }
        },
        "test": {
          "builder": "@nrwl/builders:jest",
          "options": {
            "jestConfig": "jest.config.js",
            "tsConfig": "apps/docs/src/tsconfig.spec.json",
            "setupFile": "apps/docs/src/test-setup.ts"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "apps/docs/tsconfig.app.json",
              "apps/docs/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "docs-e2e": {
      "root": "apps/docs-e2e/",
      "sourceRoot": "apps/docs-e2d/src",
      "projectType": "application",
      "prefix": "",
      "architect": {
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "apps/docs-e2e/protractor.conf.js",
            "devServerTarget": "docs:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "docs:serve:production"
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": "e2e/tsconfig.e2e.json",
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "pro-widgets": {
      "root": "libs/pro-widgets",
      "sourceRoot": "libs/pro-widgets/src",
      "projectType": "library",
      "prefix": "pro",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "libs/pro-widgets/tsconfig.lib.json",
            "project": "libs/pro-widgets/ng-package.json"
          }
        },
				"test": {
					"builder": "@nrwl/builders:jest",
					"options": {
						"jestConfig": "libs/pro-widgets/jest.config.js",
						"tsConfig": "libs/pro-widgets/tsconfig.spec.json",
						"setupFile": "libs/pro-widgets/src/test-setup.ts"
					}
				},
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "libs/pro-widgets/tsconfig.lib.json",
              "libs/pro-widgets/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "docs"
}