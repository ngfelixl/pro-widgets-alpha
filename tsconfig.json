{
	"compileOnSave": false,
	"compilerOptions": {
    "importHelpers": true,
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es5",
		"types": [
			"jest"
		],
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2017",
			"dom"
		],
		"baseUrl": ".",
		"paths": {
			"@docs/*": [
				"apps/docs/src/*"
			],
			"@pro-widgets-libs/*": [
				"libs/*"
			],
			"@env/*": [
				"apps/docs/src/environments/*"
			],
			"@pro-widgets": [
				"libs/pro-widgets/src/index.ts"
			],
      "@pro-widgets/*": [
        "libs/pro-widgets/src/*"
      ]
		}
	},
	"exclude": [
		"node_modules",
		"tmp"
	]
}